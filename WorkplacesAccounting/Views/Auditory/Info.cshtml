@model WorkplacesAccounting.Classes.Auditory
<div class="container-fluid">
    <div class="row">
        <div class="col-md-3">

            <!-- Profile Image -->
            <div class="card card-primary card-outline">
                <div class="card-body box-profile">
                    
                    <div class="text-center">
                        <img class="profile-user-img img-fluid img-circle"
                             src="https://secure.gravatar.com/avatar/e4a9fe1be2caa2d0e048ce06ca27d6fd?s=100&d=mm"
                             alt="User profile picture">
                    </div>
                    
                    <h3 class="profile-username text-center">@Model.ResponsibleUser.firstname</h3>

                    <p class="text-muted text-center">Ответственный преподователь</p>

                    <a href="/User/UserInfo?id=@Model.ResponsibleUser.id" class="btn btn-primary btn-block"><b>Подробнее</b></a>
                </div>
                <!-- /.card-body -->
            </div>
            <!-- /.card -->
            <!-- About Me Box -->
            <!-- /.card -->
        </div>
        <!-- /.col -->
        <div class="col-md-9">
            <div class="card">
                <div class="card-header p-2">
                    <ul class="nav nav-pills">
                        <li class="nav-item"><a class="nav-link active" href="#timeline" data-toggle="tab">Таймлайн</a></li>
                        <li class="nav-item"><a class="nav-link" href="#Session" data-toggle="tab">Текущие сессии (@WorkplacesAccounting.Common.Data.SessionsList.Where(x=>x.Auditory.Id==Model.Id && x.EndTime=="").Count())</a></li>
                    </ul>
                </div><!-- /.card-header -->
                <div class="card-body">
                    <div class="tab-content">
                        <!-- /.tab-pane -->
                        <div class=" active tab-pane" id="timeline">
                            <!-- The timeline -->
                            <div class="timeline timeline-inverse">
                                @{
                                    foreach (var dategroup in WorkplacesAccounting.Common.Data.SessionsList.Where(x => x.Auditory.Id == Model.Id).OrderByDescending(x => DateTime.Parse(x.StartTime)).GroupBy(x => DateTime.Parse(x.StartTime).ToShortDateString()))
                                    {
                                        <!-- timeline time label -->
                                        <div class="time-label">
                                            <span class="bg-success">
                                                @DateTime.Parse(dategroup.Key).ToShortDateString()
                                            </span>
                                        </div>
                                        <!-- /.timeline-label -->
                                        foreach (var session in dategroup)
                                        {
                                            <!-- timeline item -->
                                            <div>
                                                <i class="far fa-clock bg-primary"></i>

                                                <div class="timeline-item">
                                                    @{
                                                        DateTime res;
                                                        if (DateTime.TryParse(session.StartTime, out res) && DateTime.TryParse(session.EndTime, out res))
                                                        {
                                                            <span class="time"><i class="far fa-clock"></i> @DateTime.Parse(session.StartTime).ToShortTimeString() - @DateTime.Parse(session.EndTime).ToShortTimeString()</span>
                                                        }
                                                        else
                                                        {
                                                            <span class="time"><i class="far fa-clock"></i> @DateTime.Parse(session.StartTime).ToShortTimeString() - сейчас</span>
                                                        }
                                                    }
                                                    

                                                    <h3 class="timeline-header"><a href="#">Сессия @session.ID</a> </h3>

                                                    <div class="timeline-body">
                                                        <p>Пользователь: @WorkplacesAccounting.Common.Data.UsersList.Find(x => x.id == session.User.id).firstname</p>
                                                        <p>Компьютер: @WorkplacesAccounting.Common.Data.ComputersList.Find(x => x.Id == session.Computer.Id).MachineName</p>
                                                    </div>
                                                    <div class="timeline-footer">
                                                        <a href="/Session/Index?Id=@session.ID" class="btn btn-primary btn-sm">Подробнее</a>
                                                    </div>
                                                </div>
                                            </div>
                                            <!-- END timeline item -->
                                        }

                                    }
                                }


                                <div>
                                    <i class="far fa-clock bg-gray"></i>
                                </div>
                            </div>
                        </div>
                        <div class="tab-pane" id="Session">
                            <div class="HomeContainer">
                                @{
                                    foreach (WorkplacesAccounting.Classes.Session curSession in WorkplacesAccounting.Common.Data.SessionsList.Where(x=>x.Auditory.Id==Model.Id&& x.EndTime=="").ToList())
                                    {
                                        <a class="content" href="/Session/Index?id=@curSession.ID">
                                            <div class="card_session">
                                                <div class="card__header">
                                                    @{
                                                        if (!String.IsNullOrEmpty(curSession.WorkareaPreview))
                                                        {
                                                            <img src="@String.Format("data:image/png;base64,{0}", curSession.WorkareaPreview)" alt="card__image" class="card__image" width="600">
                                                        }
                                                        else
                                                        {
                                                            <img src="https://media.moddb.com/images/articles/1/73/72743/image_error_full.png" alt="card__image" class="card__image" width="600">
                                                        }
                                                    }

                                                </div>
                                                <div class="card__body">
                                                    <div class="tag__body">
                                                        <span class="tag tag-green">Активная</span>
                                                        <span class="tag tag-gray">@curSession.Auditory.Name</span>
                                                    </div>
                                                    <span class="tag tag-gray">@curSession.Computer.MachineName</span>
                                                    <h4>Сессия #@curSession.ID</h4>
                                                </div>
                                                <div class="card__footer">
                                                    <div class="user">
                                                        <img src="https://secure.gravatar.com/avatar/e4a9fe1be2caa2d0e048ce06ca27d6fd?s=100&d=mm" alt="user__image" class="user__image">
                                                        <div class="user__info">
                                                            <h5>@curSession.User.firstname</h5>
                                                            <small>@curSession.User.cohort.Split(',')[0]</small>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </a>
                                    }
                                }
                            </div>

                        </div>
                        <!-- /.tab-pane -->
                        <!-- /.tab-pane -->
                    </div>
                    <!-- /.tab-content -->

                </div><!-- /.card-body -->
            </div>
            <!-- /.card -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</div>