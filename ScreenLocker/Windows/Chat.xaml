<Window x:Class="ScreenLocker.Windows.Chat"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:uc ="clr-namespace:WpfControlLibrary2.Elements;assembly=WpfControlLibrary2"
        xmlns:local="clr-namespace:ScreenLocker.Windows"
        mc:Ignorable="d"
        Title="Chat" Height="450" Width="800">
    <Border Background="#FFF3F4F6">
        <Grid>
            <uc:Button1 x:Name="Back"  VerticalAlignment="Top" HorizontalAlignment="Left" XAMLText="Назад" Margin="10,5,0,0" Height="40" Width="100" MouseDown="Back_MouseDown"/>
            <Label Content="Чат" FontSize="20" FontWeight="Bold" VerticalAlignment="Top" Margin="120,5,0,0" Height="40" VerticalContentAlignment="Center"/>
            <ScrollViewer Margin="0,50,0,50" x:Name="ScrollViewerContainer">
                <StackPanel x:Name="parrent"/>
            </ScrollViewer>
            <uc:TextBox1 x:Name="MessageText" VerticalAlignment="Bottom" Margin="10,0,120,10" Height="30"/>
            <uc:Button1 x:Name="Sent"  VerticalAlignment="Bottom" HorizontalAlignment="Right" XAMLText="Отправить" Margin="10" Height="30" Width="100" MouseDown="Sent_MouseDown"/>
        </Grid>

    </Border>
</Window>
