        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ScreenLocker.Windows"
        xmlns:uc ="clr-namespace:WpfControlLibrary2.Elements;assembly=WpfControlLibrary2"
        mc:Ignorable="d"
        Title="ChatList" Height="450" Width="800">
    <Border Background="#FFF3F4F6">
        <Grid>
            <Label Content="Список чатов" FontSize="20" FontWeight="Bold" VerticalAlignment="Top" Margin="10,5,0,0" Height="40" VerticalContentAlignment="Center"/>
            <ScrollViewer Margin="0,50,0,0">
                <StackPanel x:Name="parrent"/>
            </ScrollViewer>
        </Grid>

    </Border>
</Window>
