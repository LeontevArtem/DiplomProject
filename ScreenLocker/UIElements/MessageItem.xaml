<UserControl x:Class="ScreenLocker.UIElements.MessageItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ScreenLocker.UIElements"
             mc:Ignorable="d">
    <Border Background="#00ABE4" CornerRadius="10" Margin="10">
        <Grid>
            <Label x:Name="SenterName" VerticalAlignment="Top" HorizontalAlignment="Left" Content="Username" Foreground="White" FontWeight="Bold" Margin="5"/>
            <TextBlock x:Name="MessageText" VerticalAlignment="Top"  Text="Message text..." Foreground="White" Margin="10,30,0,10" TextWrapping="Wrap"/>
        </Grid>   
    </Border>
</UserControl>
