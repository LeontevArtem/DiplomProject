<UserControl x:Class="ScreenLocker.UIElements.ChatUserItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ScreenLocker.UIElements"
             mc:Ignorable="d" >
    <Border Background="#00ABE4" CornerRadius="10" Margin="10" MouseDown="Border_MouseDown">
        <Grid>
            <Label x:Name="SenterName" VerticalAlignment="Top" HorizontalAlignment="Left" Content="Username" Foreground="White" FontWeight="Bold" Margin="5"/>
            <Border CornerRadius="50" Width="20" Height="20" Background="White" HorizontalAlignment="Right" Margin="100,0,5,0">
                <Label x:Name="UnreadCounter" VerticalAlignment="Center" HorizontalAlignment="Center" Content="1" FontSize="7" FontWeight="Bold"/>
            </Border>
        </Grid>
    </Border>
</UserControl>
