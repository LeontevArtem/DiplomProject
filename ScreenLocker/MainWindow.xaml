<Window x:Class="ScreenLocker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:tb="http://www.hardcodet.net"
        xmlns:local="clr-namespace:ScreenLocker"
        mc:Ignorable="d"
        Title="LockScreen" Height="450" Width="800"  Closing="Window_Closing">
    
    <Grid>
        <Button x:Name="close" Click="close_Click" Width="200" Height="200" Content="Close" HorizontalAlignment="Left"/>
        <Frame x:Name="frame" NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>
